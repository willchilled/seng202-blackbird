<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.group2.blackbirdView.GUIController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <Menu mnemonicParsing="false" text="Project">
                    <items>
                      <MenuItem fx:id="newProjMenu" mnemonicParsing="false" onAction="#show" text="New" />
                        <MenuItem disable="true" mnemonicParsing="false" text="Load" />
                    </items>
                  </Menu>
                  <Menu fx:id="addDataMenuButton" disable="true" mnemonicParsing="false" text="Add Data">
                     <items>
                        <MenuItem fx:id="routeMenuItem" mnemonicParsing="false" onAction="#addRouteData" text="Route" />
                        <MenuItem mnemonicParsing="false" text="Flight" />
                        <MenuItem mnemonicParsing="false" onAction="#addAirlineData" text="Airline" />
                        <MenuItem fx:id="airportMenuItem" mnemonicParsing="false" onAction="#addAirportData" text="Airport" />
                     </items>
                  </Menu>
                  <Menu disable="true" mnemonicParsing="false" text="Export Data">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Route" />
                        <MenuItem mnemonicParsing="false" text="Flight" />
                        <MenuItem mnemonicParsing="false" text="Airline" />
                        <MenuItem mnemonicParsing="false" text="Airplane" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="mainTabPane" prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" visible="false" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Flights">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Routes">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="routeTable" layoutX="13.0" layoutY="69.0" prefHeight="690.0" prefWidth="1142.0">
                          <columns>
                            <TableColumn fx:id="routeAirlineCol" prefWidth="75.0" text="Airline" />
                            <TableColumn fx:id="routeAirlineIDCol" prefWidth="75.0" text="Airline ID" />
                              <TableColumn fx:id="routeSrcCol" prefWidth="75.0" text="Source" />
                              <TableColumn fx:id="routeSrcIDCol" prefWidth="75.0" text="Source ID" />
                              <TableColumn fx:id="routeDestCol" prefWidth="75.0" text="Dest" />
                              <TableColumn fx:id="routeDestIDCol" prefWidth="75.0" text="Dest ID" />
                              <TableColumn fx:id="routeCSCol" prefWidth="75.0" text="Codeshare" />
                              <TableColumn fx:id="routeStopsCol" prefWidth="75.0" text="Stops" />
                              <TableColumn fx:id="routeEqCol" prefWidth="75.0" text="Equipment" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Airports">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="airportTable" layoutX="13.0" layoutY="69.0" prefHeight="690.0" prefWidth="1142.0">
                          <columns>
                            <TableColumn fx:id="airportIDCol" prefWidth="75.0" text="ID" />
                              <TableColumn fx:id="airportNameCol" prefWidth="75.0" text="Name" />
                            <TableColumn fx:id="airportCityCol" prefWidth="75.0" text="City" />
                              <TableColumn fx:id="airportCountryCol" prefWidth="75.0" text="Country" />
                              <TableColumn fx:id="airportIATACol" prefWidth="75.0" text="IATA/FF" />
                              <TableColumn fx:id="airportICAOCol" prefWidth="75.0" text="ICAO" />
                              <TableColumn fx:id="airportLatCol" prefWidth="75.0" text="Lattitude" />
                              <TableColumn fx:id="airportLongCol" prefWidth="75.0" text="Longitude" />
                              <TableColumn fx:id="airportAltCol" prefWidth="75.0" text="Altitude" />
                              <TableColumn fx:id="airportTimeCol" prefWidth="75.0" text="TimeZone" />
                              <TableColumn fx:id="airportDSTCol" prefWidth="75.0" text="DST" />
                              <TableColumn fx:id="airportTZCol" prefWidth="75.0" text="TZ" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children></AnchorPane>
              </content>
            </Tab>
            <Tab text="Airlines">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="airlineTable" layoutX="13.0" layoutY="69.0" prefHeight="690.0" prefWidth="1142.0">
                          <columns>
                            <TableColumn fx:id="airlineIDCol" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="airlineNameCol" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="airlineAliasCol" prefWidth="75.0" text="Alias" />
                              <TableColumn fx:id="airlineIATACol" prefWidth="75.0" text="IATA" />
                              <TableColumn fx:id="airlineICAOCol" prefWidth="75.0" text="ICAO" />
                              <TableColumn fx:id="airlineCallsignCol" prefWidth="75.0" text="Callsign" />
                              <TableColumn fx:id="airlineCountryCol" prefWidth="75.0" text="Country" />
                              <TableColumn fx:id="airlineActCol" prefWidth="75.0" text="Active" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
