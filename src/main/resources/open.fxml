<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.group2.blackbirdView.GUIController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <Menu mnemonicParsing="false" text="Project">
                    <items>
                      <MenuItem fx:id="newProjMenu" mnemonicParsing="false" onAction="#show" text="New" />
                        <MenuItem mnemonicParsing="false" text="Load" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Add Data">
                     <items>
                        <MenuItem fx:id="routeMenuItem" mnemonicParsing="false" text="Route" />
                        <MenuItem mnemonicParsing="false" text="Flight" />
                        <MenuItem mnemonicParsing="false" text="Airline" />
                        <MenuItem fx:id="airportMenuItem" mnemonicParsing="false" onAction="#addAirportData" text="Airport" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Export Data">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Route" />
                        <MenuItem mnemonicParsing="false" text="Flight" />
                        <MenuItem mnemonicParsing="false" text="Airline" />
                        <MenuItem mnemonicParsing="false" text="Airplane" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="mainTabPane" prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Flights">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Routes">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="routeTable" layoutX="13.0" layoutY="69.0" prefHeight="690.0" prefWidth="1142.0">
                          <columns>
                            <TableColumn fx:id="airlineCol" prefWidth="75.0" text="Airline" />
                            <TableColumn fx:id="airlineIDCol" prefWidth="75.0" text="Airline ID" />
                              <TableColumn prefWidth="75.0" text="Source" />
                              <TableColumn prefWidth="75.0" text="Source ID" />
                              <TableColumn prefWidth="75.0" text="Dest" />
                              <TableColumn prefWidth="75.0" text="Dest ID" />
                              <TableColumn prefWidth="75.0" text="Codeshare" />
                              <TableColumn prefWidth="75.0" text="Stops" />
                              <TableColumn prefWidth="75.0" text="Equipment" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Airports">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="airportTable" layoutX="13.0" layoutY="69.0" prefHeight="690.0" prefWidth="1142.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="ID" />
                              <TableColumn prefWidth="75.0" text="Name" />
                            <TableColumn prefWidth="75.0" text="City" />
                              <TableColumn prefWidth="75.0" text="Country" />
                              <TableColumn prefWidth="75.0" text="IATA/FF" />
                              <TableColumn prefWidth="75.0" text="ICAO" />
                              <TableColumn prefWidth="75.0" text="Lattitude" />
                              <TableColumn prefWidth="75.0" text="Longitude" />
                              <TableColumn prefWidth="75.0" text="Altitude" />
                              <TableColumn prefWidth="75.0" text="TimeZone" />
                              <TableColumn prefWidth="75.0" text="DST" />
                              <TableColumn prefWidth="75.0" text="TZ" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children></AnchorPane>
              </content>
            </Tab>
            <Tab text="Airlines">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="airlineTable" layoutX="13.0" layoutY="69.0" prefHeight="690.0" prefWidth="1142.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="ID" />
                            <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Alias" />
                              <TableColumn prefWidth="75.0" text="IATA" />
                              <TableColumn prefWidth="75.0" text="ICAO" />
                              <TableColumn prefWidth="75.0" text="Callsign" />
                              <TableColumn prefWidth="75.0" text="Country" />
                              <TableColumn prefWidth="75.0" text="Active" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
